@page
@model Disable2faModel
@{
    ViewData["Title"] = "Disable two-factor authentication (2FA)";
    ViewData["ActivePage"] = ManageNavPages.TwoFactorAuthentication;
}
<section class="content">
    <div class="container-fluid">
        <div class="row  justify-content-center">
            <div class="col-md-10 col-xl-8 col-xxl-6 col-12 mt-2">
                <partial name="_StatusMessage" for="StatusMessage" />
                <div class="card card-outline card-primary">
                    <div class="card-header">
                        <h5>@ViewData["Title"]</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col">
                                <div class="callout callout-danger">
                                    <p class="lead">
                                        <span class="mdi mdi-alert mdi-24px text-danger"></span>
                                        <strong>Está acción solo deshabilita 2FA</strong>
                                    </p>
                                    <p class="lead">
                                        La desactivación de 2FA no cambia las claves utilizadas en las aplicaciones de autenticación. Si desea cambiar la clave
                                        utilizado en una aplicación de autenticación, debe
                                        <a asp-page="./ResetAuthenticator"> restablecer sus claves de autenticación. </a>
                                    </p>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <form method="post" class="form-group w-100">
                                    <button class="btn btn-warning" type="submit">Deshabilitar 2FA</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>



