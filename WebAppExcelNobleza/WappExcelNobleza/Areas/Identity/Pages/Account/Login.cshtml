@page
@model LoginModel

@{
    ViewData["Title"] = "Iniciar Sesión";
}
<div class="login-page">


    <div class="login-box">
        <form id="account" method="post">
            <div class="card card-outline card-primary">
                <div class="card-header m-0 mr-1 p-0 row d-flex align-items-center">
                    <div class="col">
                        <h5 class="mb-0 col text-center">@ViewData["Title"]</h5>
                        <p class="text-muted">Rellene los campos para iniciar sesión.</p>
                    </div>
                    <img src="~/assets/images/p-120x120.png" style="width:100px; height:auto" class="place-right mt-4-minus mr-0">
                </div>

                <div class="card-body mvh-60 overflow-auto">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <div class="input-group mb-3">
                            <input asp-for="Input.Email" class="form-control" />
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <span class="fas fa-envelope"></span>
                                </div>
                            </div>
                        </div>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>


                    <div class="form-group">
                        <div class="input-group mb-3">
                            <input asp-for="Input.Password" class="form-control" />
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <span class="fas fa-lock"></span>
                                </div>
                            </div>
                        </div>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-8">
                            <div class="icheck-primary">
                                <input asp-for="Input.RememberMe" type="checkbox" id="remember">
                                <label for="remember">
                                    Recordarme
                                </label>
                            </div>
                        </div>
                        <div class="col-4">
                            <button type="submit" class="btn btn-primary btn-block">Entrar</button>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="row border-top border-info mt-2 pt-2">
                        <a id="forgot-password" asp-page="./ForgotPassword" class="d-block">¿Olvidó su contraseña?</a>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="d-block">Registrar un Usuario Nuevo</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

