<div class="col-lg-3 col-md-6 col-12 mt-2">
    <div class="small-box bg-info">
        <div class="inner">
            <p style="font-size: 24px">@Model.NombreMaquina</p>
            <p style="font-size: 20px">@Model.Kg Kg</p>
            <p style="line-height:7px; font-size:14px">@Model.Ots Orden(es), @Model.Rolls Bobinas</p>
            <p style="line-height:5px; font-size:14px">Ultima Captura: @Model.Last.ToString("HH:mm")</p>
            <p style="line-height:5px; font-size:14px">Tiempo Sin Captura: @Model.Dif.ToString("HH:mm")</p>
        </div>
        <div class="icon">
            <img src="@ImagePath" />
        </div>
        <a href="#" class="small-box-footer"> Más información <span class="fas fa-arrow-circle-right"></span></a>
    </div>
</div>
@code{
    [Parameter] public DashboardMaquinaCardModel Model { get; set; }
    [Parameter] public string ImagePath { get; set; }

    }
