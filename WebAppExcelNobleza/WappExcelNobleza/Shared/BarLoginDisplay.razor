<AuthorizeView>
    <Authorized>
        
            <li class="nav-item dropdown">
                <a class="nav-link" data-toggle="dropdown" href="#">
                    <i class="">
                        <img src="@context.User.Claims.FirstOrDefault(u => u.Type == "ImageProfile")?.Value" class="brand-image img-circle elevation-3 bg-white" style="width: 30px" />
                    </i>
                </a>
                <div class="dropdown-menu dropdown-menu-lg dropdown-menu-right">
                    <span class="dropdown-header">Perfil</span>
                    <div class="dropdown-divider"></div>
                    <div class="d-flex justify-content-center">
                        <img src="@context.User.Claims.FirstOrDefault(u => u.Type == "ImageProfile")?.Value" class="img-circle elevation-1 w-50" />
                    </div>
                    <div class="dropdown-header">Hola, @context.User.Claims.FirstOrDefault(u => u.Type == "Nombre")?.Value</div>

                    <div class="dropdown-divider"></div>

                    <a href="Identity/Account/Manage" class="dropdown-item">
                        <i class="mdi mdi-account mdi-24px mr-2"></i> Administrar Perfil
                    </a>
                    <div class="dropdown-divider"></div>
                    <form id="logout-form" method="post" class="hide" action="Identity/Account/LogOut"></form>
                    <button onclick="document.getElementById('logout-form').submit()"
                            class="dropdown-item">
                        <i class="mdi mdi-logout mdi-24px mr-2"></i> Cerrar Sesión
                    </button>

                    @*<a href="#" class="dropdown-item">
                            <i class="fas fa-users mr-2"></i> 8 friend requests
                            <span class="float-right text-muted text-sm">12 hours</span>
                        </a>
                        <div class="dropdown-divider"></div>
                        <a href="#" class="dropdown-item">
                            <i class="fas fa-file mr-2"></i> 3 new reports
                            <span class="float-right text-muted text-sm">2 days</span>
                        </a>
                        <div class="dropdown-divider"></div>
                        <a href="#" class="dropdown-item dropdown-footer">See All Notifications</a>*@
                </div>
            </li>

    </Authorized>
    <NotAuthorized>
            <li class="nav-item">
                <a href="Identity/Account/Login" class="nav-link">
                <i class="mdi mdi-login mdi-18px"></i> Iniciar Sesión
                </a>
            </li>
    </NotAuthorized>
</AuthorizeView>
